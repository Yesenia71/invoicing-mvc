@model InvoicingViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Facturación</h1>
    <form asp-action="Results">
        <div class="mb-3">
            <label for="name" class="form-label">Nombre</label>
            <input asp-for="FullName" type="text" class="form-control" id="name" />
        </div>
        <div class="mb-3">
            <label for="antiguedad" class="form-label">Antiguedad en meses</label>
            <input asp-for="Antiquity" type="number" class="form-control" id="antiguedad" />
        </div>
        <div class="mb-3">
            <label for="horastrabajadas" class="form-label">Horas trabajadas en meses</label>
            <input asp-for="HoursWorked" type="number" class="form-control" id="horastrabajadas" />
        </div>
        <div class="mb-3">
            <label for="valorhora" class="form-label">Valor por hora</label>
            <input asp-for="HoursValue" type="number" class="form-control" id="valorhora" />
        </div>
        <button type="submit" class="btn btn-primary">Calcular</button>
    </form>
</div>



